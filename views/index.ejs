<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index,nofollow" />
    <meta name="description" content="An app to return request detail" />
    <meta name="google" content="notranslate" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {},
          },
        },
      };
    </script>
    <title>Request Parser</title>

    <style>
      body {
        margin: 0;
        padding: 12px;
        width: 100vw;
        height: 100vh;
      }

      table {
        border-collapse: collapse;
        width: 100%;
        overflow-x: scroll;
      }

      td,
      th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 4px;
        min-width: 10vw;
        word-break: break-all;
        padding: 8px 16px;
      }

      tr:nth-child(even) > td {
        background-color: #dddddd;
        border: 1px solid #eeeeee;
      }
    </style>
  </head>

  <body class="max-w-full">
    <h1 class="text-3xl font-bold w-full text-center">Request Parser</h1>
    <span>Request : <code><%= req.method %> <%= url %></code></span>
    <div class="w-full mt-4">
      <h2 class="font-bold text-xl">Query</h2>
      <table class="table-auto">
        <% Object.keys(req.query).forEach(function(key,index){ %>
        <tr class="row">
          <td class="key"><%= key %></td>
          <td class="value">
            <code> <%= req.query[key] %> </code>
          </td>
        </tr>
        <% }) %>
      </table>
    </div>
    <div class="w-full mt-4">
      <h2 class="font-bold text-xl">Headers</h2>
      <table>
        <% Object.keys(req.headers).forEach(function(key,index){ %>
        <tr class="row">
          <td class="key"><%= key %></td>
          <td class="value">
            <code> <%= key !== "cookie" ? req.headers[key] : "Cookies is print below" %> </code>
          </td>
        </tr>
        <% }) %>
      </table>
    </div>
    <div class="w-full mt-4 pb-8">
      <h2 class="font-bold text-xl">Cookies (Request)</h2>
      <table>
        <% Object.keys(req.cookies).forEach(function(key,index){ %>
        <tr class="row">
          <td class="key"><%= key %></td>
          <td class="value">
            <code> <%= req.cookies[key] %> </code>
          </td>
        </tr>
        <% }) %>
      </table>
    </div>
    <div>
      <h2 class="font-bold text-xl">Cookie (Client)</h2>
      <code id="document-cookie"> </code>
    </div>
  </body>
</html>
